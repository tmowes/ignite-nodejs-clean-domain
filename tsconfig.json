{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@*": [
        "./src/*"
      ]
    },
    "types": [
      "vitest/globals"
    ],
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.d.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
